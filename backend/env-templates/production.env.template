# Backend Production Environment Variables Template
# Perfect LifeTracker Pro - Production Configuration
# Copy this file to .env and replace all placeholder values

# Production Environment
NODE_ENV=production
PORT=3001

# Database Configuration (Production - Use Real Azure Cosmos DB)
USE_MOCK_DATABASE=false
COSMOS_DB_ENDPOINT=https://REPLACE_WITH_COSMOS_DB_ACCOUNT.documents.azure.com:443/
COSMOS_DB_KEY=REPLACE_WITH_PRODUCTION_COSMOS_DB_PRIMARY_KEY
COSMOS_DB_DATABASE=perfectltp-prod

# Authentication Configuration (Production - Real JWT Required)
USE_MOCK_AUTH=false
AZURE_CLIENT_ID=REPLACE_WITH_PRODUCTION_AZURE_CLIENT_ID
AZURE_AUTHORITY=https://login.microsoftonline.com/REPLACE_WITH_PRODUCTION_TENANT_ID
FRONTEND_URL=https://www.perfectltp.com

# Azure Storage (Production - Real Azure Storage Account)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=REPLACE_WITH_STORAGE_ACCOUNT;AccountKey=REPLACE_WITH_STORAGE_KEY;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=perfectltp-uploads

# Azure OpenAI Service (Production - Real API Keys)
AZURE_OPENAI_API_KEY=REPLACE_WITH_PRODUCTION_AZURE_OPENAI_KEY
AZURE_OPENAI_ENDPOINT=https://REPLACE_WITH_RESOURCE_NAME.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=REPLACE_WITH_DEPLOYMENT_NAME

# Security Configuration
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_256_BITS_MINIMUM
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET
ENCRYPTION_KEY=REPLACE_WITH_AES_256_ENCRYPTION_KEY

# CORS Configuration (Production - Restrict Origins)
ALLOWED_ORIGINS=https://www.perfectltp.com,https://perfectltp.com

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration (Production)
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_ACCESS_LOGS=true

# Monitoring and Health Checks
HEALTH_CHECK_TIMEOUT=5000
ENABLE_METRICS=true
METRICS_PORT=9090

# Email Configuration (Production)
SMTP_HOST=REPLACE_WITH_SMTP_HOST
SMTP_PORT=587
SMTP_USER=REPLACE_WITH_SMTP_USERNAME
SMTP_PASS=REPLACE_WITH_SMTP_PASSWORD
FROM_EMAIL=noreply@perfectltp.com

# Cache Configuration (Production - Redis)
REDIS_HOST=REPLACE_WITH_REDIS_HOST
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_REDIS_PASSWORD
CACHE_TTL=3600

# File Upload Limits (Production)
MAX_FILE_SIZE=50MB
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Security Headers and Features
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
TRUST_PROXY=true

# Application Insights (Azure Monitoring)
APPINSIGHTS_INSTRUMENTATIONKEY=REPLACE_WITH_APP_INSIGHTS_KEY 