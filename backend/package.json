{
  "name": "lifetracker-pro-backend",
  "version": "0.1.0",
  "description": "Express TypeScript backend for LifeTracker Pro",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "predev": "kill-port 4000",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "test": "jest && node test-api-contract.js"
  },
  "dependencies": {
    "@azure/cosmos": "^3.17.3",
    "@azure/search-documents": "^11.3.3",
    "@azure/storage-blob": "^12.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-jwt": "^8.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1",
    "morgan": "^1.10.0",
    "redis": "^4.6.5",
    "swagger-ui-express": "^4.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "kill-port": "^2.0.1",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
