{
  "name": "perfect-lifetracker-pro",
  "version": "1.0.0",
  "description": "Perfect LifeTracker Pro - Comprehensive personal productivity suite",
  "private": true,
  "scripts": {
    "start": "powershell -ExecutionPolicy Bypass -File ./start-clean.ps1",
    "start:dev": "powershell -ExecutionPolicy Bypass -File ./start-clean.ps1 -Dev",
    "start:docker": "powershell -ExecutionPolicy Bypass -File ./docker-start.ps1",
    "start:docker:dev": "powershell -ExecutionPolicy Bypass -File ./docker-start.ps1 -dev",
    "start:clean": "powershell -ExecutionPolicy Bypass -File ./start-clean.ps1",
    "start:clean:dev": "powershell -ExecutionPolicy Bypass -File ./start-clean.ps1 -Dev",
    "stop": "powershell -ExecutionPolicy Bypass -File ./docker-clean.ps1",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "frontend": "cd frontend && npm run dev",
    "backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "kill": "powershell -ExecutionPolicy Bypass -File ./kill-react.ps1",
    "dev:clean": "npm run kill && npm run dev",
    "deploy:azure": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-azure.ps1 -Environment dev",
    "deploy:azure:staging": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-azure.ps1 -Environment staging",
    "deploy:azure:prod": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-azure.ps1 -Environment prod",
    "terraform:init": "cd terraform && terraform init",
    "terraform:plan": "cd terraform && terraform plan",
    "terraform:apply": "cd terraform && terraform apply",
    "terraform:destroy": "cd terraform && terraform destroy",
    "azure:login": "az login",
    "azure:setup": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-keyvault.ps1",
    "health:check": "curl http://localhost:3001/api/health && curl http://localhost:3000"
  },
  "keywords": [
    "productivity",
    "tracker",
    "life-management",
    "todo",
    "fitness"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 